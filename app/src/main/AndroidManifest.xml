<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.krischkes.moritz.uebung">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity android:name=".CheckboxActivity" />
        <activity android:name=".RadioButtonActivity" />
        <activity android:name=".AutoCompleteActivity" />
        <activity android:name=".SwitcherActivity" />
        <activity android:name=".SpinnerActivity" />

        <activity
            android:name=".ListViewActivity"
            android:label="@string/title_activity_listv_view"/>
        <activity
            android:name=".OwnAdapterListViewActivity"
            android:label="@string/own_adapter_listview_label"
            />

    </application>

</manifest>
